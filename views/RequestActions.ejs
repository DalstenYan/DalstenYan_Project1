    <script>
      console.log("Hello World");


      //to get data for modification
      function getRequestData(id) {
        //const fetchUrl = `/getRequestData/${id}`;
        fetch(`/getRequestData/${id}`)
                .then(response => response.json())
                .then(data => {
                    // Populate the form with the fetched data
                    document.getElementById('actionName').value = data.Name;
                    document.getElementById('actionRequestType').value = data.Request_Type;
                    document.getElementById('actionRequestId').value = data.ID;

                    document.getElementById('actionRequestId').setAttribute('data-id', data.ID);

                    console.log(document.getElementById('actionRequestId').getAttribute('data-id'))

                    document.getElementById('actionForm').scrollIntoView({ behavior: 'smooth' });
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                });
        }

        function deleteRequest() {
            const userid = document.getElementById('actionRequestId').getAttribute('data-id');
            //console.log(userid)
            fetch(`/deleteRequest/${userid}`, {
                method: 'DELETE',
            })
            .then(response => {
              //console.log("the response: " + response.json())
              if (!response.ok) {
                  throw new Error(`HTTP error! status: ${response.status}`);
              }
                //return response.json();

            })
            .then(data => {
              console.log("attempting delete")
              location.reload();
              document.getElementById('actionForm').reset(); 
            })
        }
      
